#include "zonkey.dtsi"

/* ────── 行列スキャン & 変換オフセット ────── */
&default_transform { col-offset = <6>; };

&kscan0 {
    col-gpios = <&xiao_d 10 GPIO_ACTIVE_HIGH>,
                <&xiao_d  9 GPIO_ACTIVE_HIGH>,
                <&xiao_d  8 GPIO_ACTIVE_HIGH>,
                <&xiao_d  7 GPIO_ACTIVE_HIGH>,
                <&gpio0   10 GPIO_ACTIVE_HIGH>;
};

/* ────── pinctrl ラベルは従来どおり ────── */
&pinctrl {
    spi0_default: spi0_default {
        group1 { psels = <NRF_PSEL(SPIM_SCK , 0, 5)>,
                        <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                        <NRF_PSEL(SPIM_MISO, 0, 4)>; };
    };
    spi0_sleep: spi0_sleep {
        group1 { psels = <NRF_PSEL(SPIM_SCK , 0, 5)>,
                        <NRF_PSEL(SPIM_MOSI, 0, 4)>,
                        <NRF_PSEL(SPIM_MISO, 0, 4)>;
                 low-power-enable; };
    };
};

/* ────── トラックボール本体 ────── */
&spi0 {
    status        = "okay";
    compatible    = "nordic,nrf-spim";
    pinctrl-0     = <&spi0_default>;
    pinctrl-1     = <&spi0_sleep>;
    pinctrl-names = "default", "sleep";
    cs-gpios      = <&gpio0 9 GPIO_ACTIVE_LOW>;

    trackball: trackball@0 {
        status            = "okay";
        compatible        = "pixart,pmw3610";
        reg               = <0>;
        spi-max-frequency = <2000000>;
        irq-gpios         = <&gpio0 2 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        /* 旧 automouse-layer / scroll-layers は削除 */
    };
};

/* ────── Input-Processor + Listener 追加部分 ────── */
&{/} {
    /* layer-6 を 700 ms だけ有効にする Processor */
    temp_layer6: temp_layer6 {
        compatible             = "zmk,input-processor-temp-layer";
        #input-processor-cells = <2>;          /* layer, timeout で２セル */
    };

    trackball_listener {
        compatible       = "zmk,input-listener";
        device           = <&trackball>;
        input-processors = <&temp_layer6 6 700>; /* layer-6, 700 ms */
    };
};
